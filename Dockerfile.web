# --- Build stage: Vite/React/Next frontend (Wathaci Web) ---
FROM node:20-alpine AS build

# Create app directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the frontend source code
COPY . .

# Vite will automatically read VITE_* variables from .env.production
# during this build step (as long as .env.production is in the context)
RUN npm run build

# --- Runtime stage: serve static assets with Nginx ---
FROM nginx:1.27-alpine

# Copy built frontend from the previous stage
COPY --from=build /app/dist /usr/share/nginx/html

# Expose port 80 inside the container (mapped to 4173 by docker-compose)
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
