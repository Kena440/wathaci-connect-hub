# ============================================================================
# WATHACI CONNECT - Backend Environment Configuration Template
# ============================================================================
# Copy this file to backend/.env (for development) or backend/.env.production
# (for production) and replace placeholder values with your actual credentials.
#
# IMPORTANT: Never commit files with real credentials to version control!
# ============================================================================

# CORS Configuration
# Comma-separated list of allowed frontend origins
# Development: Leave empty to use defaults (localhost)
# Production: Set ALLOWED_ORIGINS to your actual frontend domain(s):
# ALLOWED_ORIGINS=https://www.wathaci.com,https://wathaci-connect-platform.vercel.app,https://wathaci-connect-platform-amukenas-projects.vercel.app
CORS_ALLOWED_ORIGINS=""

# Frontend URL for redirects (password reset, email verification, etc.)
# Development: http://localhost:5173 or http://localhost:8080
# Production: https://www.wathaci.com
FRONTEND_URL="http://localhost:5173"

# Supabase Configuration
# Your Supabase project URL (from Supabase dashboard -> Settings -> API)
SUPABASE_URL="https://your-project-ref.supabase.co"

# Service role key with elevated privileges (keep secret, never expose in frontend)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-from-supabase-dashboard"

# Twilio Configuration (for OTP via SMS and WhatsApp)
# Get credentials from: https://console.twilio.com
# Required for OTP functionality
TWILIO_ACCOUNT_SID="your-twilio-account-sid-from-console"
TWILIO_AUTH_TOKEN="your-twilio-auth-token-from-console"
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_WHATSAPP_FROM="whatsapp:+14155238886"

# Lenco Payment Gateway Configuration
# Get these from your Lenco dashboard (https://dashboard.lenco.co)
# Development: Use test keys (format: sk_test_[string])
# Production: Use live keys (format: [64-char-hex] or sk_live_[string])
LENCO_SECRET_KEY="your-lenco-secret-key-from-dashboard"

# Webhook secret for validating Lenco webhook signatures
LENCO_WEBHOOK_SECRET="your-lenco-webhook-secret-from-dashboard"

# Webhook URL for receiving payment notifications
# Development: Can use ngrok or similar tunnel: "https://your-tunnel.ngrok.io/webhooks/lenco"
# Production: Must be HTTPS: "https://your-project-ref.supabase.co/functions/v1/lenco-payments-validator"
LENCO_WEBHOOK_URL="https://your-project-ref.supabase.co/functions/v1/lenco-payments-validator"

# Optional: Allow in-memory registration for testing when Supabase is not configured
# Set to "true" for development/testing only. Never use in production.
ALLOW_IN_MEMORY_REGISTRATION="false"

# ============================================================================
# SMTP EMAIL CONFIGURATION
# ============================================================================
# SMTP settings for sending transactional emails via Nodemailer
# Provider: PrivateEmail (Namecheap) - mail.privateemail.com
# Note: For production, ensure DNS records (SPF, DKIM, DMARC) are configured

# SMTP Host - The mail server address
# For PrivateEmail: mail.privateemail.com
# For Gmail: smtp.gmail.com
# For SendGrid: smtp.sendgrid.net
SMTP_HOST="mail.privateemail.com"

# SMTP Port
# Port 465: Implicit SSL/TLS (secure: true)
# Port 587: Explicit STARTTLS (secure: false)
# Port 25: Plain/STARTTLS (not recommended for production)
SMTP_PORT="465"

# SMTP Secure Connection
# "true" for port 465 (implicit SSL/TLS)
# "false" for port 587 (STARTTLS)
SMTP_SECURE="true"

# SMTP Authentication Method
# Common values: LOGIN, PLAIN, XOAUTH2
SMTP_AUTH_METHOD="LOGIN"

# SMTP Username
# Usually your full email address
SMTP_USERNAME="support@wathaci.com"

# SMTP Password
# Your email account password or app-specific password
# IMPORTANT: Never commit this value to version control!
SMTP_PASSWORD="your-smtp-password-here"

# From Email Address
# The email address that appears in the "From" field
FROM_EMAIL="support@wathaci.com"

# From Name (optional)
# The friendly name that appears with the From email
FROM_NAME="Wathaci Support"

# Reply-To Email Address
# Where replies should be sent (can be same as FROM_EMAIL)
REPLY_TO_EMAIL="support@wathaci.com"

# Email Provider Identifier
# Values: SMTP, SENDGRID, MAILGUN, SES, etc.
EMAIL_PROVIDER="SMTP"

# Support Email (for display in messages)
SUPPORT_EMAIL="support@wathaci.com"

# Enable Email Debug Logging
# Set to "true" to enable detailed SMTP logs (development only)
EMAIL_DEBUG="false"

