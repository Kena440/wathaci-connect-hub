# Production Environment Configuration for Wathaci Connect
# 
# This file is a template for production environment variables.
# Copy this to .env.production for local production builds, or 
# set these variables in Vercel project settings for deployment.

# Backend API Configuration
# For Vercel deployment, this should point to your backend Vercel project
VITE_API_BASE_URL="https://wathaci-connect-platform2.vercel.app"

# Supabase Configuration
# Replace with your actual Supabase project URL and anon key
VITE_SUPABASE_URL="https://your-project-ref.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key-jwt-token"

# Payment Limits (ZMW)
VITE_MIN_PAYMENT_AMOUNT="5"
VITE_MAX_PAYMENT_AMOUNT="50000"
VITE_PLATFORM_FEE_PERCENTAGE="10"

# Lenco Payment Gateway Configuration
# Replace with your actual Lenco API credentials
VITE_LENCO_API_URL="https://api.lenco.co/access/v2"
VITE_LENCO_PUBLIC_KEY="your-lenco-public-key"
VITE_LENCO_WEBHOOK_URL="https://your-project-ref.supabase.co/functions/v1/lenco-payments-validator"

